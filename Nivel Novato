#include <stdio.h>
#include <string.h>

#define MAX_ITENS 10  // Capacidade m√°xima da mochila

// Estrutura para representar um item
typedef struct {
    char nome[30];
    char tipo[20];
    int quantidade;
} Item;

// Fun√ß√£o para adicionar um novo item
void adicionarItem(Item mochila[], int *total) {
    if (*total >= MAX_ITENS) {
        printf("\n‚ö†Ô∏è Mochila cheia! N√£o √© poss√≠vel adicionar mais itens.\n");
        return;
    }

    Item novo;
    printf("\nDigite o nome do item: ");
    scanf(" %[^\n]", novo.nome);
    printf("Digite o tipo do item: ");
    scanf(" %[^\n]", novo.tipo);
    printf("Digite a quantidade: ");
    scanf("%d", &novo.quantidade);

    mochila[*total] = novo;
    (*total)++;

    printf("\n‚úÖ Item adicionado com sucesso!\n");
}

// Fun√ß√£o para remover um item pelo nome
void removerItem(Item mochila[], int *total) {
    if (*total == 0) {
        printf("\nüì≠ A mochila est√° vazia.\n");
        return;
    }

    char nomeRemover[30];
    int encontrado = -1;

    printf("\nDigite o nome do item que deseja remover: ");
    scanf(" %[^\n]", nomeRemover);

    for (int i = 0; i < *total; i++) {
        if (strcmp(mochila[i].nome, nomeRemover) == 0) {
            encontrado = i;
            break;
        }
    }

    if (encontrado == -1) {
        printf("\n‚ùå Item n√£o encontrado!\n");
        return;
    }

    // Move os itens seguintes uma posi√ß√£o para tr√°s
    for (int i = encontrado; i < *total - 1; i++) {
        mochila[i] = mochila[i + 1];
    }

    (*total)--;

    printf("\nüóëÔ∏è Item removido com sucesso!\n");
}

// Fun√ß√£o para listar todos os itens cadastrados
void listarItens(Item mochila[], int total) {
    if (total == 0) {
        printf("\nüì≠ A mochila est√° vazia.\n");
        return;
    }

    printf("\nüéí Itens na mochila:\n");
    printf("------------------------------------------\n");
    printf("%-20s %-15s %-10s\n", "Nome", "Tipo", "Quantidade");
    printf("------------------------------------------\n");

    for (int i = 0; i < total; i++) {
        printf("%-20s %-15s %-10d\n", mochila[i].nome, mochila[i].tipo, mochila[i].quantidade);
    }

    printf("------------------------------------------\n");
}

// Fun√ß√£o principal com menu interativo
int main() {
    Item mochila[MAX_ITENS];
    int total = 0;
    int opcao;

    do {
        printf("\n===== MENU DA MOCHILA =====\n");
        printf("1. Adicionar item\n");
        printf("2. Remover item\n");
        printf("3. Listar itens\n");
        printf("0. Sair\n");
        printf("============================\n");
        printf("Escolha uma op√ß√£o: ");
        scanf("%d", &opcao);

        switch (opcao) {
            case 1:
                adicionarItem(mochila, &total);
                break;
            case 2:
                removerItem(mochila, &total);
                break;
            case 3:
                listarItens(mochila, total);
                break;
            case 0:
                printf("\nüëã Saindo do sistema. At√© a pr√≥xima!\n");
                break;
            default:
                printf("\n‚ö†Ô∏è Op√ß√£o inv√°lida! Tente novamente.\n");
        }
    } while (opcao != 0);

    return 0;
}
